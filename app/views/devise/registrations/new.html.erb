
<div id='sign-up-title-container'>
  <h2 id='sign-up-title'>New Account Sign Up</h2>
</div>

  <div id='new-user-form'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div id='devise-error-messages'>
      <%= devise_error_messages! %>
    </div>

    <div id='additional-logins'>

      <div id='already-has-account'>
        <%- if controller_name != 'sessions' %>
        <%= link_to "Already have an account?", new_session_path(resource_name) %><br />
        <% end -%>
      </div>

      <div id='facebook-login'>
        <%- if devise_mapping.omniauthable? %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(:facebook)}", omniauth_authorize_path(resource_name, :facebook) %> <i id='facebook-logo' class="fab fa-facebook"></i><br />
        <% end -%>
      </div>

      <div id='strava-login'>
        <%- if devise_mapping.omniauthable? %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(:strava)}", omniauth_authorize_path(resource_name, :strava) %> <i id='strava-logo' class="fab fa-strava"></i><br />
        <% end -%>
      </div>

    </div>
    <div class="user-field">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="user-field">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>
    </div>

    <div class="user-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="user-field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <h7 id="password-length">(<%= @minimum_password_length %> characters minimum)</h7>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="user-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <%= f.file_field :profile_photo %>

    <div class="actions">
      <%= f.submit "Sign up", class: "new-user-submit"%>
    </div>
  <% end %>
</div>
