
<% if current_user %>
  <div id="app" />
<% else %>
<div id="splash-page">
  <div id="splash-page-image">
    <div id="splash-header">
      <h1>Welcome To The Running Log</h1>
      <h3>Please Create an Account or Sign In</h3>
    </div>
    <div id='splash-buttons'>
      <p id="splash-sign-up-button"><%= link_to 'Sign Up', new_user_registration_path %></p>
      <p id="splash-sign-in-button"><%= link_to 'Sign In', new_user_session_path %></p>
    </div>
  </div>
  <div id='splash-page-message'>
  </div>
</div>

<% end %>
